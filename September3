<body>

    <div class="container">
        <h1>リアルタイムプレビュー</h1>
        <p>下のボックスに文字を入力してください。</p>
        
        <textarea id="my-textarea" class="text-input" placeholder="ここに文字を入力..."></textarea>
        
        <div id="preview" class="preview-area"></div>
    </div>

    <script>
        // 【ステップ1】 操作したいHTML要素を見つけて、名前をつける
        const inputArea = document.getElementById('my-textarea');
        const previewArea = document.getElementById('preview');

        // 【ステップ2】 入力欄で「入力」という出来事が起きるのを監視する
        inputArea.addEventListener('input', () => {
            // 【ステップ3】 入力があった瞬間に、中の処理を実行する
            previewArea.textContent = inputArea.value;
        });
    </script>

</body>
</html>
